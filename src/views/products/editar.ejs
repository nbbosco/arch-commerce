     <form action="/products/<%= productoEnDetalle.id%>?_method=PUT/edit" method="POST" class="formulario">
        <br>
        <div class="control-formulario">
            <h3>Perfil del usuario</h3>
            <label class="radio"><input type="radio" name="perfil" id="perfil"></input>Creador</label>
            <label class="radio"><input type="radio" name="perfil" id="perfil" ></input>Vendedor</label>
        </div>
        <div class="control-formulario">
            <p>Creador</p>
            <input type="text" name="creador" id="creador" placeholder="<%=productoEnDetalle.creador%>" class="control" required>
        </div>
        <div class="control-formulario">
            <p>Vendedor</p>
            <input type="text" name="vendedor" id="vendedor" placeholder="<%=productoEnDetalle.coleccionista%>" class="control" required>
        </div>
        <div class="control-formulario">
            <h3>Sobre el producto</h3>
            <p>Fecha de creacion: <%=productoEnDetalle.fechaDeCreacion%></p>
            <input type="date" name="fechaDeCreacion" id="fechaDeCreacion" min='1900-01-01' max="2010-01-01" class="control">
            <p>Precio base de la subasta</p>
            <input type="number" name="precio" id="precio" placeholder="<%=productoEnDetalle.precio%>ETH" class="control" required>
        </div>
        <div class="control-formulario">
            <p>Nombre Producto</p>
            <input type="text" name="nombreProducto" id="nombreProducto" placeholder="<%=productoEnDetalle.nombreProducto%>" minlength="3" class="control" required>
        </div>
        <div class="control-formulario">
            <p>Descripcion</p>
            <textarea name="descripcion" id="descripcion" placeholder="<%=productoEnDetalle.descripcion%>" class="control"></textarea>
        </div>
        <div class="control-formulario">
            <h3>Categoria</h3>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="electro"></input>Animación</label>
            <br>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="moda"></input>3d</label>
            <br>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="hogar"></input>Ilustración</label>
            <br>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="jugeteria"></input>Surreal</label>
            <br>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="vidaSana"></input>Raro</label>
            <br>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="vidaSana"></input>Color</label>
            <br>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="vidaSana"></input>Abstracto</label>
            <br>
            <label class="check"><input type="checkbox" name="categoria" id="categoria" value="vidaSana"></input>Otro</label>
        </div>
        <div class="control-formulario">
            <h3>Subir archivos</h3>
            <p>Imagen principal del producto</p>
            <img src="../../img/<%=productoEnDetalle.imagen%>" style="width: 150px;">
            <input type="file" name="imagen" id="imagen" accept="image/*" class="control"></input>
            <p>Archivo original del producto</p>
            <input type="file" name="productoOriginal" id="productoOriginal" accept="video/*" class="control"></input>
        </div>
        <button type="submit" class="boton-formulario">Editar</button>
        <button type="reset" class="boton-formulario">Borrar</button>
    </form>
    <!-- footer -->
    <%- include('../partials/footer') %>
    
</body>
</html>